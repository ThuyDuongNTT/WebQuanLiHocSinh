@model IEnumerable<QuanLiDiem.Models.Class>

@{
    ViewBag.Title = "Quản lí điểm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lớp học</h2>

<p>
    @Html.ActionLink("Tạo lớp học mới", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.TenLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiSo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaGVCN)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.TenLop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiSo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaGVCN)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new {  id=item.MaLop  }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaLop }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaLop })
        </td>
    </tr>
}

</table>
